# OpenClaw Security Configuration
# Copy this file to .env and customize for your environment

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
PORT=3000
FRAMEWORK=express  # express or fastify

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=openclaw-auth-service

# ============================================
# CSRF PROTECTION
# ============================================
CSRF_SECRET=your-super-secret-csrf-key-change-in-production
CSRF_TOKEN_EXPIRY=900  # 15 minutes in seconds

# ============================================
# TENANT CONFIGURATION
# ============================================
TENANT_ID=tenant-default
ISOLATION_LEVEL=enhanced  # standard, enhanced, dedicated
DATA_RESIDENCY=us-east-1  # AWS region for data residency

# ============================================
# DATABASE CONNECTIONS
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/openclaw
REDIS_URL=redis://localhost:6379
QDRANT_URL=http://localhost:6333
NEO4J_URL=bolt://localhost:7687

# ============================================
# ENCRYPTION & KEY MANAGEMENT
# ============================================
ENCRYPTION_KEY_ID=kms-key-id
KMS_PROVIDER=aws  # aws, azure, gcp, vault
KMS_ENDPOINT=https://kms.us-east-1.amazonaws.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TIER=enhanced  # standard, enhanced, dedicated
RATE_LIMIT_ENABLED=true

# ============================================
# DDOS PROTECTION
# ============================================
DDOS_PROTECTION_ENABLED=true
DDOS_BLOCK_DURATION=3600  # Block duration in seconds
DDOS_THRESHOLD=1000  # Requests per minute threshold

# ============================================
# INJECTION PREVENTION
# ============================================
PROMPT_INJECTION_ENABLED=true
SQL_INJECTION_ENABLED=true
XSS_PROTECTION_ENABLED=true
CSRF_PROTECTION_ENABLED=true

# ============================================
# COMPLIANCE
# ============================================
ENABLE_GDPR=true
ENABLE_HIPAA=false
ENABLE_SOC2=true
ENABLE_ISO27001=true

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=info  # debug, info, warn, error
AUDIT_LOG_ENABLED=true
METRICS_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_PORT=9090

# ============================================
# AGENT SANDBOXING
# ============================================
SANDBOX_ENABLED=true
SANDBOX_RUNTIME=docker  # firecracker, gvisor, docker

# ============================================
# CORS
# ============================================
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://app.openclaw.ai

# ============================================
# TLS/SSL
# ============================================
TLS_ENABLED=false  # Set to true in production
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem
